{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
        "next/core-web-vitals",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react-hooks/recommended"
    ],
    "plugins": [
        "react",
        "@typescript-eslint",
        "react-hooks"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        // Your custom rules
        "no-console": "off", // Allow console statements
        "@typescript-eslint/no-explicit-any": "off", // Disable explicit any type errors
        "react/prop-types": "off", // Disable prop-types validation
        "react/react-in-jsx-scope": "off", // Disable React scope requirement (if using React 17+)
        "prefer-const": "off",// Disable prefer-const rule
        "@typescript-eslint/no-unused-vars": "off" // Disable unused vars rule
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
  }